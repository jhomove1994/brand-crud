{
  "name": "brads-microservice",
  "version": "1.0.0",
  "description": "Microservice for brads",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev src/app.ts",
    "start": "node dist/app.js",
    "build": "tsc",
    "test": "jest --watchAll --passWithNoTests"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "class-validator": "^0.14.1",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.11",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.1.2",
    "typeorm": "^0.3.20"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.+(ts|tsx|js|jsx)",
      "**/.*.(test|spec).+(ts|tsx|js|jsx)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
